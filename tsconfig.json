{
    "compilerOptions": {
      "module": "ES2022",
      "esModuleInterop": true,
      "target": "ES2022",
      "moduleResolution": "Node",
      "outDir": "dist",
      "isolatedModules": false,
      "strict": true,
      "noImplicitAny": true,
      "useUnknownInCatchVariables": false,
      "inlineSourceMap": true,
      "removeComments": true,
      "declaration": true,
    },
    "include": [
      "src/**/*",
      "src/**/*.json"
    ],
    "exclude": [
      "node_modules"
    ],
  }